#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir/node" ]; then
  "$basedir/node"  "$basedir/../../packages/isomorphic-boilerplate-graphql/client/node_modules/webpack-dev-server/bin/webpack-dev-server.js" "$@"
  ret=$?
else 
  node  "$basedir/../../packages/isomorphic-boilerplate-graphql/client/node_modules/webpack-dev-server/bin/webpack-dev-server.js" "$@"
  ret=$?
fi
exit $ret
